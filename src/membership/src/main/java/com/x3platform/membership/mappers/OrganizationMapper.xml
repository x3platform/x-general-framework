<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.x3platform.membership.mappers.OrganizationMapper">
  <resultMap id="BaseResultMap" type="com.x3platform.membership.models.OrganizationInfo">
    <result property="id" jdbcType="VARCHAR" column="id" />
    <result property="code" jdbcType="VARCHAR" column="code" />
    <result property="name" jdbcType="VARCHAR" column="name" />
    <result property="domain" jdbcType="VARCHAR" column="domain" />
    <result property="license" jdbcType="VARCHAR" column="license" />
    <result property="modifiedDate" jdbcType="TIMESTAMP" column="modified_date" />
    <result property="createdDate" jdbcType="TIMESTAMP" column="created_date" />
  </resultMap>
  <sql id="Select_Where_Clause">
    <where>
      <!-- 列表查询 -->
      <if test="var_scene == 'Query'">
        <if test="param_search_text != null and param_search_text != ''">
          t.name LIKE concat('%',#{param_search_text},'%')
        </if>
      </if>
      <!-- 默认 -->
      <if test="var_scene == 'default'">
        <if test="param_code != null and param_code != ''">
          AND t.code = #{param_code}
        </if>
        <if test="param_name != null and param_name != ''">
          AND t.name = #{param_name}
        </if>
        <if test="param_domain != null and param_domain != ''">
          AND t.domain = #{param_domain}
        </if>
        <if test="param_license != null and param_license != ''">
          AND t.license = #{param_license}
        </if>
      </if>
    </where>
  </sql>
  <insert id="insert" parameterType="com.x3platform.membership.models.OrganizationInfo">
    INSERT INTO sys_organization
    (
      id,
      code,
      name,
      domain,
      license,
      status,
      modified_date,
      created_date
    ) VALUES (
      #{id},
      #{code},
      #{name},
      #{domain},
      #{license},
      #{status},
      CURRENT_TIMESTAMP,
      CURRENT_TIMESTAMP
    )
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.x3platform.membership.models.OrganizationInfo">
    UPDATE sys_organization SET

      code = #{code},
      name = #{name},
      domain = #{domain},
      license = #{license},
      status = #{status},
      modified_date = CURRENT_TIMESTAMP

    WHERE id = #{id}
  </update>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
    DELETE FROM sys_organization WHERE id = #{id}
  </delete>
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap" >
    SELECT * FROM sys_organization WHERE id = #{id}
  </select>
  <select id="findAll" parameterType="java.util.Map" resultMap="BaseResultMap" >
    SELECT * FROM sys_organization t
    <if test="_parameter != null">
      <include refid="Select_Where_Clause" />
    </if>
    <if test="orders != null and orders.size() > 0">
      ORDER BY
      <foreach collection="orders" item="order" index="index" separator="," >
        ${order}
      </foreach>
    </if>
    <if test="length > 0">
      LIMIT 0, ${length}
    </if>
  </select>
  <select id="getRowCount" >
    SELECT COUNT(0) AS "RowCount" FROM sys_organization t
    <if test="_parameter != null">
      <include refid="Select_Where_Clause" />
    </if>
  </select>
  <select id="isExist" resultType="java.lang.Boolean" >
    SELECT COUNT(0) AS "Count" FROM sys_organization WHERE id = #{id}
  </select>
</mapper>
