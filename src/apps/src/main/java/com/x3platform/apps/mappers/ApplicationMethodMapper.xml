<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.x3platform.apps.mappers.ApplicationMethodMapper">
  <resultMap id="BaseResultMap" type="com.x3platform.apps.models.ApplicationMethod">
    <result property="id" jdbcType="VARCHAR" column="id" />
    <result property="applicationId" jdbcType="VARCHAR" column="application_id" />
    <result property="code" jdbcType="VARCHAR" column="code" />
    <result property="name" jdbcType="VARCHAR" column="name" />
    <result property="displayName" jdbcType="VARCHAR" column="display_name" />
    <result property="description" jdbcType="VARCHAR" column="description" />
    <result property="detail" jdbcType="VARCHAR" column="detail" />
    <result property="type" jdbcType="VARCHAR" column="type" />
    <result property="options" jdbcType="VARCHAR" column="options" />
    <result property="effectScope" jdbcType="INTEGER" column="effect_scope" />
