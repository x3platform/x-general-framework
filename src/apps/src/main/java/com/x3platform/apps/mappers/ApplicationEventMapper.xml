    <where>
      <!-- 列表查询 -->
      <if test="var_scene == 'Query'">
        <if test="param_search_text != null and param_search_text != ''">
          t.description LIKE concat('%',#{param_search_text},'%')
        </if>
      </if>
      <!-- 默认 -->
      <if test="var_scene == 'default'">
        <if test="param_level != null and param_level != ''">
          AND t.level = #{param_level}
        </if>
        <if test="param_description != null and param_description != ''">
          AND t.description = #{param_description}
        </if>
        <if test="param_start_time != null">
          AND t.start_time = #{param_start_time}
        </if>
        <if test="param_finish_time != null">
          AND t.finish_time = #{param_finish_time}
        </if>
        <if test="param_ip != null and param_ip != ''">
          AND t.ip = #{param_ip}
        </if>
      </if>
    </where>
  </sql>
  <insert id="insert" parameterType="com.x3platform.apps.models.ApplicationEvent">
