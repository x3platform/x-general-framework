  <resultMap id="BaseResultMap" type="com.x3platform.apps.models.ApplicationEvent">
    <result property="id" jdbcType="VARCHAR" column="id" />
    <result property="accountId" jdbcType="VARCHAR" column="account_id" />
    <result property="accountName" jdbcType="VARCHAR" column="account_name" />
    <result property="applicationId" jdbcType="VARCHAR" column="application_id" />
    <result property="applicationFeatureName" jdbcType="VARCHAR" column="application_feature_name" />
