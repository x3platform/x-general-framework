      #{applicationFeatureName,jdbcType=VARCHAR},
      #{level,jdbcType=VARCHAR},
      #{description,jdbcType=VARCHAR},
      #{startTime,jdbcType=TIMESTAMP},
      #{finishTime,jdbcType=TIMESTAMP},
      #{timespan,jdbcType=DECIMAL},
      #{ip,jdbcType=VARCHAR},
      CURRENT_TIMESTAMP
    )
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.x3platform.apps.models.ApplicationEvent">
    UPDATE application_event SET

      account_id = #{accountId,jdbcType=VARCHAR},
      account_name = #{accountName,jdbcType=VARCHAR},
      application_id = #{applicationId,jdbcType=VARCHAR},
      application_feature_name = #{applicationFeatureName,jdbcType=VARCHAR},
      level = #{level,jdbcType=VARCHAR},
      description = #{description,jdbcType=VARCHAR},
      start_time = #{startTime,jdbcType=TIMESTAMP},
      finish_time = #{finishTime,jdbcType=TIMESTAMP},
      timespan = #{timespan,jdbcType=DECIMAL},
      ip = #{ip,jdbcType=VARCHAR}

    WHERE id = #{id}
  </update>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
    DELETE FROM application_event WHERE id = #{id}
  </delete>
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap" >
    SELECT * FROM application_event WHERE id = #{id}
  </select>  
  <select id="findAll" parameterType="java.util.Map" resultMap="BaseResultMap" >
    SELECT * FROM application_event t
    <if test="_parameter != null">
      <include refid="Select_Where_Clause" />
    </if>
    <if test="orders != null and orders.size() > 0">
      ORDER BY
      <foreach collection="orders" item="order" index="index" separator="," >
        ${order}
